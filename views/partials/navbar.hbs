<!-- SIGN-IN -->
  <div class="modal fade" tabindex="-1" id="sign-in-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Συνδεθείτε</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/mainpage" method="post"> 
            <div class="mb-3">
              <label for="signInEmail" class="form-label">Email</label>
              <input type="email" class="form-control" id="signInEmail" aria-describedby="emailHelp" name="signInEmail" value="{{signInEmail}}">
            </div>
            <div class="mb-3">
              <label for="signInPassword" class="form-label">Κωδικός</label>
              <input type="password" class="form-control" id="signInPassword" name="signInPassword" value="{{signInPassword}}">
            </div>
            <div style="margin-top: 5px; margin-bottom: 15px; color: rgb(210, 17, 17);">{{signInMessage}}</div>
            <button type="submit" class="btn" id="signInButton">Σύνδεση</button>
          </form>
        </div>
      </div>
    </div>
  </div>


  <!-- SIGN-UP -->
  <div class="modal fade" tabindex="-1" id="sign-up-modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Εγγραφείτε</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/mainpage" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" value="{{signUpUsername}}">
                <p style="font-size: smaller; margin-top: 5px; color: rgb(210, 17, 17);">{{usernameMessage}}</p>
            </div>
            <div class="mb-3">
              <label for="signUpEmail" class="form-label">Email</label>
              <input type="email" class="form-control" id="signUpEmail" name="signUpEmail" aria-describedby="emailHelp" value="{{signUpEmail}}">
              <p style="font-size: smaller; margin-top: 5px; color: rgb(210, 17, 17);">{{emailMessage}}</p>
            </div>
            <div class="mb-3">
              <label for="signUpPassword" class="form-label">Κωδικός</label>
              <input type="password" class="form-control" id="signUpPassword" name="signUpPassword" value="{{signUpPassword}}">
              <p style="font-size: smaller; margin-top: 5px; color: rgb(210, 17, 17);">{{passwordMessage}}</p>
            </div>
            <div class="mb-3">
              <label for="confirmPassword" class="form-label">Επιβεβαίωση κωδικού</label>
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" value="{{confirmPassword}}">
              <p style="font-size: smaller; margin-top: 5px; color: rgb(210, 17, 17);">{{confirmMessage}}</p>
            </div>
            <button type="submit" class="btn" id="signUpButton">Εγγραφή</button>
          </form>
        </div>
      </div>
    </div>
  </div>

{{#if signInError}}
   <script>
      $(document).ready(function() {
        $('#sign-in-modal').modal('show');
      });
    </script>
{{/if}}

{{#if signUpError}}
   <script>
      $(document).ready(function() {
        $('#sign-up-modal').modal('show');
      });
    </script>
{{/if}}




