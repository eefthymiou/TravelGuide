
    

    <div class="container">
        <form>
            {{#if admin}}
            <div class="d-flex justify-content-end align-items-center">
                <!-- edit button -->
                <button id="editButton" class="btn btn-warning m-3">Επεξεργασία</button>
                <!-- save button -->
                <button id="saveButton" class="btn btn-success">Αποθήκευση</button>
                <!-- delete button -->
                <button id="deleteButton" class="btn btn-danger m-3">Διαγραφή</button>
            </div>
            {{/if}}

            <fieldset class="m-3">
                <br>
                <!-- title and description div -->
                <div class="mb-3">
                    <input id="title" class="form-control adminInput mb-3" type="text" placeholder="Όνομα" value ="{{title}}" disabled>
                    {{#if description}}
                        <textarea id="description" class="form-control adminInput" placeholder="Περιγραφή" disabled> {{description}} </textarea>
                    {{/if}}
                </div>
                
                <!-- import/preview photo -->
                <div class="input-group mb-3 adminAction" id="importPhoto">
                    <input type="file" class="form-control" id="inputGroupFile" >
                    <button class="btn btn-outline-secondary" type="button" id="previewButton">Preview</button>
                </div>

                <!--images container-->
                {{!-- <div id="carouselImages" class="carousel slide mb-3 justify-content-center" data-bs-ride="carousel">
                    <div class="carousel-inner" id="imagesContainer">
                        <!-- images -->
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselImages" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselImages" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div> --}}
                    


                <!-- all new elements are inside to this div -->
                <div id="container">
                    {{#each info}}
                    <div class="mb-3">
                        <textarea class="form-control adminInput editMode mb-3" placeholder="Πρόσθεσε επιπλέον πληροφορίες. Π.χ. Πρόσβαση, Ιστορια." disabled>{{this}}</textarea>
                        <button class="btn btn-danger adminAction">Διαγραφή</button>
                    </div>
                    {{/each}}
                </div>
                <!-- add parapraph button -->
                <button id="addInfo" class="btn btn-primary mb-3 adminAction">Πρόσθεσε Κουτί πληροφορίων</button>
                
                
                <!--Google map-->
                <h4>Χάρτης</h4>
                <!-- input element for google search location -->
                <div class="row adminAction mb-3" style="justify-content: space-between;">
                    <div class="col">
                        <input id="searchLocation" class="form-control" value="" type="text" placeholder="Αναζήτηση Τοποθεσίας">
                    </div>
                    <div class="col-auto">
                        <button id="searchButton" class="btn btn-primary">Αναζήτηση</button>
                    </div>
                </div>
                                

                <div id="map-container-google-1" class="z-depth-1-half map-container mb-3 d-flex justify-content-center">
                    <iframe class="map" src="https://maps.google.com/maps?q={{location}}&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" allowfullscreen></iframe>
                </div>
                
                <!-- reviews -->
                <div class="container">
                    <div class="row">
                        <div id="totalReviews" class="col">Αξιολογήσεις ({{numOfReviews}})</div>
                        <div id="avgRating" class="col">{{avgRating}} &#9733;</div>
                    </div>
                </div>
                
                <div id="reviews-flex" class="flex test"> 
                    <div id="reviewContainer" class="flex-column mb-3 overflow-auto" >
                        {{#each reviews}}
                        {{!-- new Div --}}
                        <div class="card m-2">

                            {{!-- new Row --}}
                            <div class="row">
                                {{!-- new Col1 --}}
                                <div class="col-md-3">
                                    {{!-- new Col2 --}}
                                    <div class="d-flex align-items-center h-100">
                                        <div class="card-text mx-auto">
                                            {{!-- user name --}}
                                            {{this.user_id}}
                                        </div>
                                    </div>
                                </div>
                                {{!-- new Col3 --}}
                                <div class="col">
                                    <div class="card-bory m-3">
                                        <div class="star_rating">                                  
                                           {{#each this.score}}
                                                {{#if this}}
                                                    <button class="star selected">&#9733; </button>
                                                {{else}}
                                                    <button class="star" style="color:grey">&#9734;</button>
                                                {{/if}}
                                            {{/each}}
                                        </div>
                                        {{#if this.text}}
                                            <textarea class="form-control final_review_text" style="background-color:white" placeholder="Γράψε το σχόλιο σας εδώ" autocomplete="off" disabled>{{this.text}}</textarea>
                                        {{/if}}
                                        <div class="card-text">
                                            <div class="small text-body-secondary" style="display:block">Ημερομηνία Δημοσίευσης: {{this.date}}</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        </div>
                </div>

                
                <!-- button add review -->
                <button id="addReview" class="btn btn-primary mb-3 userAction">Πρόσθεσε Αξιολόγηση</button>
                <div class="guestAction">
                    <button class="btn guestButton sign-in-btn" data-bs-toggle="modal" data-bs-target="#sign-in-modal">Συνδεθείτε</button>
                    <button class="btn guestButton sign-up-btn" data-bs-toggle="modal" data-bs-target="#sign-up-modal">Εγγραφείτε</button>
                </div>
                 
                <br><br><br>
        </fieldset> 
        </form> 
    </div>
    <script src="/scripts/page2.js"></script>


